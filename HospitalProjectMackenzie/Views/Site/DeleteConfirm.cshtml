@model HospitalProjectMackenzie.Models.SiteDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>
<h2>Are you sure you want to delete this Site?</h2>
<a href="/Site/Details/@Model.SiteID">Go back to @Model.SiteName</a>
<h2>@Model.SiteName</h2>
<form action="/Site/Delete/@Model.SiteID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>