@model IEnumerable<HospitalProjectMackenzie.Models.PatientDto>
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="/Appointment/Create" method="POST">
    <div>
        <label>Name:</label> <input type="text" name="AppointmentName" />
    </div>

   <div>
        <label for="PatientID">Patient:</label>
        <select name="PatientID">
            @foreach (var patient in Model)
            {
                <option value="@patient.PatientFirstName">@patient.PatientFirstName</option>
                <option value="@patient.PatientLastName">@patient.PatientLastName</option>
            }
        </select>
    </div>




    <div>
        <input type="submit" value="Add Appointment" />

    </div>
</form>