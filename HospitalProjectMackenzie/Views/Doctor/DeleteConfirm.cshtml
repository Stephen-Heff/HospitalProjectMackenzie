@model HospitalProjectMackenzie.Models.DoctorDto
@{
    ViewBag.Title = "DeleteConfirm";
}
<h2>Are you sure you want to delete this Doctor?</h2>
<a href="/Doctor/List">Cancel</a>
<h2>@Model.DoctorFirstName @Model.DoctorLastName</h2>
<div>Employee Number: @Model.DoctorEmployeeNumber</div>
<form action="/Doctor/Delete/@Model.DoctorID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>
